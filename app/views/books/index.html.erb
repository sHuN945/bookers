<h3>Books</h3>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <%= @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show",book_path(book.id) %></td>
      <td><%= link_to "edit",book_path(book.id) %></td>
      <td><%= link_to "destroy",destroy_book_path(book.id), method: :delete, "data-comfirm" => "削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>
<% end %>
